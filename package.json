{
  "name": "openrv-web",
  "version": "0.1.0",
  "description": "Web-based VFX image/sequence viewer inspired by OpenRV",
  "author": "Alex Kanunnikov <lifeart92@gmail.com>",
  "homepage": "https://lifeart.github.io/openrv-web",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lifeart/openrv-web.git"
  },
  "bugs": {
    "url": "https://github.com/lifeart/openrv-web/issues"
  },
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:unit": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ci": "playwright test --project=chromium",
    "test:e2e:smoke": "playwright test --project=smoke",
    "test:e2e:ui": "playwright test --ui"
  },
  "dependencies": {
    "@jsquash/jxl": "^1.3.0",
    "gl-matrix": "^3.4.3",
    "gto-js": "1.0.0",
    "libheif-js": "^1.19.8",
    "mediabunny": "^1.28.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@vitest/coverage-v8": "^1.2.0",
    "jsdom": "^24.0.0",
    "typescript": "^5.7.3",
    "vite": "^6.0.7",
    "vitest": "^1.2.0"
  },
  "keywords": [
    "vfx",
    "openrv",
    "openrv-alternative",
    "image-viewer",
    "sequence-viewer",
    "video-player",
    "exr-viewer",
    "dailies-review",
    "color-grading",
    "color-correction",
    "cdl",
    "lut",
    "3d-lut",
    "histogram",
    "waveform",
    "vectorscope",
    "gto",
    "rv-session",
    "webgl",
    "annotations",
    "frame-accurate",
    "stereo-3d",
    "post-production",
    "film-production",
    "aswf"
  ],
  "license": "MIT"
}
